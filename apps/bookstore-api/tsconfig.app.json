{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@controllers": ["controllers/*"],
      "@types": ["types/*"],
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
