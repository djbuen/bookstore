{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@bookstore/source"], 
    "baseUrl": ".",
    "paths": {
      "@bookstore/ui-shared": ["libs/ui-shared/src/index.ts"],
      "@bookstore/ui-shared/*": ["libs/ui-shared/src/*"],
      "@bookstore/types": ["libs/types/src/index.ts"],
      "@bookstore/types/*": ["libs/types/src/*"]
    }
  }
}
